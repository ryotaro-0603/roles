---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Roles | お問い合わせ" discription="Roles | お問い合わせ">
  <div class="mx-auto mt-12 max-w-[820px]">
    <!-- <input class="bg-slate-200" type="text" name="お名前" required="required" />
      <input class="bg-slate-200" type="email" name="メールアドレス" required="required" />
      <textarea class="bg-slate-200" name="お問い合わせ内容" required="required"></textarea> -->

    <form action="https://ssgform.com/s/nRjJ34vBkiUj" aria-labelledby="form-title" id="js-contact-form" method="post">
      <div class="grid gap-4 lg:gap-6">
        <!-- Grid -->
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:gap-6">
          <div>
            <label for="hs-firstname-contacts-1" class="mb-2 block text-sm font-medium text-gray-700 dark:text-white">First Name</label>
            <input
              type="text"
              name="hs-firstname-contacts-1"
              id="hs-firstname-contacts-1"
              class="block w-full rounded-lg border border-neutral-300 px-4 py-3 text-base focus:border-blue-500 focus:ring-blue-500 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder:text-neutral-500 dark:focus:ring-neutral-600"
            />
          </div>

          <div>
            <label for="hs-lastname-contacts-1" class="mb-2 block text-sm font-medium text-gray-700 dark:text-white">Last Name</label>
            <input
              type="text"
              name="hs-lastname-contacts-1"
              id="hs-lastname-contacts-1"
              class="block w-full rounded-lg border border-neutral-300 px-4 py-3 text-base focus:border-blue-500 focus:ring-blue-500 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder:text-neutral-500 dark:focus:ring-neutral-600"
            />
          </div>
        </div>
        <!-- End Grid -->

        <!-- Grid -->
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:gap-6">
          <div>
            <label for="hs-email-contacts-1" class="mb-2 block text-sm font-medium text-gray-700 dark:text-white">ご連絡先メールアドレス</label>
            <input
              type="email"
              name="hs-email-contacts-1"
              id="hs-email-contacts-1"
              autocomplete="email"
              class="block w-full rounded-lg border border-neutral-300 px-4 py-3 text-base focus:border-blue-500 focus:ring-blue-500 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder:text-neutral-500 dark:focus:ring-neutral-600"
            />
          </div>
        </div>
        <!-- End Grid -->

        <div>
          <label for="hs-about-contacts-1" class="mb-2 block text-base font-medium text-gray-700 dark:text-white">Details</label>
          <textarea
            id="hs-about-contacts-1"
            name="hs-about-contacts-1"
            rows="4"
            class="block w-full rounded-lg border border-neutral-300 px-4 py-3 text-base focus:border-blue-500 focus:ring-blue-500 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder:text-neutral-500 dark:focus:ring-neutral-600"
          ></textarea>
        </div>
      </div>
      <!-- End Grid -->

      <div class="mt-6 grid">
        <button
          type="submit"
          class="inline-flex w-full items-center justify-center gap-x-2 rounded-lg border border-transparent bg-blue-600 px-4 py-3 text-sm font-semibold text-white hover:bg-blue-700 disabled:pointer-events-none disabled:opacity-50"
          class="g-recaptcha"
          data-sitekey="6LdM3K0pAAAAAMckqS0ih-0CfwKRsJgxnliY4uBP"
          data-callback="onSubmit"
          data-action="submit">送信する</button
        >
      </div>

      <div class="mt-3 text-center">
        <p class="text-sm text-gray-500 dark:text-neutral-500">We'll get back to you in 1-2 business days.</p>
      </div>
    </form>
  </div>
</Layout>

<script is:inline src="https://www.google.com/recaptcha/api.js" defer="defer"></script>
<script is:inline>
  function onSubmit(t) {
    const n = document.getElementById('js-contact-form');
    n && n.reportValidity() && n.submit();
  }
</script>
