---
import Layout from '../layouts/Layout.astro';
import ArrowRight from '../icons/ArrowRight.astro';
---

<Layout title="Roles | お問い合わせ" discription="Roles | お問い合わせ">
  <div class="mx-auto mt-12 max-w-[820px]">
    <!-- <input class="bg-slate-200" type="text" name="お名前" required="required" />
      <input class="bg-slate-200" type="email" name="メールアドレス" required="required" />
      <textarea class="bg-slate-200" name="お問い合わせ内容" required="required"></textarea> -->

    <form action="https://ssgform.com/s/nRjJ34vBkiUj" aria-labelledby="form-title" id="js-contact-form" method="post">
      <div class="grid gap-4 lg:gap-8">
        <div>
          <label for="hs-firstname-contacts-1" class="mb-2 block text-sm font-medium text-gray-700 dark:text-white">お名前</label>
          <input
            type="text"
            name="hs-firstname-contacts-1"
            id="hs-firstname-contacts-1"
            class="block w-full max-w-80 border border-neutral-200 p-3 text-base focus:border-blue-500 focus:ring-blue-500 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder:text-neutral-500 dark:focus:ring-neutral-600"
          />
        </div>

        <div>
          <label for="hs-email-contacts-1" class="mb-2 block text-sm font-medium text-gray-700 dark:text-white">ご連絡先メールアドレス</label>
          <input
            type="email"
            name="hs-email-contacts-1"
            id="hs-email-contacts-1"
            autocomplete="email"
            class="block w-full max-w-80 border border-neutral-200 p-3 text-base focus:border-blue-500 focus:ring-blue-500 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder:text-neutral-500 dark:focus:ring-neutral-600"
          />
        </div>

        <div>
          <label for="hs-about-contacts-1" class="mb-2 block text-base font-medium text-gray-700 dark:text-white">お問い合わせ内容</label>
          <textarea
            id="hs-about-contacts-1"
            name="hs-about-contacts-1"
            rows="4"
            class="block h-60 w-full resize-none border border-neutral-200 p-3 text-base focus:border-blue-500 focus:ring-blue-500 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder:text-neutral-500 dark:focus:ring-neutral-600"
          ></textarea>
        </div>
      </div>

      <div class="mt-6 grid place-content-center">
        <button
          type="submit"
          class="g-recaptcha group inline-grid w-[240px] grid-cols-[1fr,auto] rounded-full border-2 border-neutral-900 bg-neutral-800 px-1 py-3 text-sm text-neutral-100 transition-colors duration-300 ease-out hover:bg-neutral-50
hover:text-neutral-900 focus-visible:bg-neutral-50 focus-visible:text-neutral-900 focus-visible:outline-none"
          data-sitekey="6LdM3K0pAAAAAMckqS0ih-0CfwKRsJgxnliY4uBP"
          data-callback="onSubmit"
          data-action="submit"
        >
          <span class="grid items-center">送信する</span>
        </button>
      </div>
    </form>
  </div>
</Layout>

<script is:inline src="https://www.google.com/recaptcha/api.js" defer="defer"></script>
<script is:inline>
  function onSubmit(t) {
    const n = document.getElementById('js-contact-form');
    n && n.reportValidity() && n.submit();
  }
</script>
