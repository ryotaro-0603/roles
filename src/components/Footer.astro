---
import Logo from '../components/Logo.astro';

const nowTime = new Date();
const nowYear = nowTime.getFullYear();
---

<footer class="mt-10 px-gutter-x sm:mt-16">
  <div class="mx-auto flex max-w-[820px] items-center justify-between gap-gutter-x border-t border-neutral-200 py-gutter-y-0.5">
    <a class="block w-[60px]" href="/" aria-label="TOPページへ戻る">
      <Logo />
    </a>

    <p class="text-xs text-neutral-400">{nowYear} © Roles</p>
  </div>
</footer>
